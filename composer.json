{
    "name": "base/app",
    "authors": [
        {
            "name": "Thomas Vinicius de Moraes",
            "email": "tho.vini7@gmail.com"
        }
    ],
    "require": {
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.10",
        "pestphp/pest": "^2.33"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config/global_functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
